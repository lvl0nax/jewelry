<% content_for :meta do %>
    <title><%= title%></title>
    <meta name="description" content="<%= @product.mdesc %>" />
    <meta name="keywords" content="<%= @product.mkeywords%>" />
<% end %>

<% content_for :js do %>
    <%= stylesheet_link_tag "facebox" %>
    <%= javascript_include_tag "facebox" %>
    <script type="text/javascript">
      jQuery(document).ready(function($) {
        $('a[rel*=facebox]').facebox({
          loadingImage : '../../../assets/loading.gif',
          closeImage   : '../../../assets/closelabel.png'
        })
      })
    </script>
<% end %>

<div class="fl-l product">
<p id="notice"><%= notice %></p>

  <div class="ienlarger">
    <a href="/medium/<%=@product.article%>.jpg" rel="facebox">

      <% if !!@product.image_exist? %>
        <!--<img src="http://img691.imageshack.us/img691/7360/89815502.jpg" alt="thumb" class="resize_thumb" />-->
        <%= image_tag("/thumb/#{@product.article}.jpg", :class => 'resize_thumb' )%><br />

      <%end%>
    </a>
  </div>

  <br style="clear:left" />
</div>


<div class="prdesc">
  <% unless @product.desc.blank?%>
      <p class="descr">
        <%= @product.desc %>
      </p>
  <% end %>
  <p >
    Марка:
    <%= @product.brand %>
  </p>
  <p >
    Артикул:  <%= @product.article %>
  </p>
   <p></p>
  <% if @product.discount.blank?%>
    <p class="pr_line">
      <b> Цена: <%= @product.price.round(2) %> р. </b>
    </p>
    </br>
  <span class="p-addcard " data-id="<%= @product.id%>" data-name="<%= @product.article%>" data-price="<%= @product.price%>">
      <%= image_tag "cart.jpg",{:width => 30} %>
  </span>
  <% else %>
    <p class="descr l-through">
      Цена: <%= @product.price.round(2) %> р.
    </p>
    <div class ="discount">
      <p>Cкидка: <%= @product.discount.round(2) %> р.</p>

    </div>
    </br>
    <span class="p-addcard " data-id="<%= @product.id%>" data-name="<%= @product.article%>" data-price="<%= @product.discount%>">
        <%= image_tag "cart.jpg",{:width => 30} %>
    </span>
  <% end %>

  <script type="text/javascript" src="//yandex.st/share/share.js" charset="utf-8"></script>
  <div class="yashare-auto-init" data-yashareL10n="ru" data-yashareType="none" data-yashareQuickServices="vkontakte,facebook,twitter,odnoklassniki,moimir"></div>




</div>

<%if current_user %>
  <% if current_user.isAdmin? %>
    <%= link_to 'Редактировать продукт', edit_category_product_path(@product.category, @product) %>
    |
    <% if (@product.info.blank?)%>
      <%= link_to 'Редактировать дополнительную информацию', new_info_path(:product_id => @product.id)%>
    <% else %>
      <%= link_to 'Редактировать дополнительную информацию', edit_info_path(@product.info)%>
    <% end %>
  <% end %>
<% end %>
