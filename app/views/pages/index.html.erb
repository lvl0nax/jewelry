<h1>Listing pages</h1>

<table>
<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= raw page.description %></td>
    <td><%= link_to 'Показать', page %></td>
    <td><%= link_to 'Изменить', edit_page_path(page) %></td>
    <td><%= link_to 'Удалить', page, :confirm => 'Вы уверены?', :method => :delete %></td>
  </tr>
<% end %>
</table>
